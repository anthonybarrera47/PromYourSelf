@model PromYourSelf.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutRegister";
}


<body class="bg-gradient-primary">
    <form asp-action="Register" asp-controller="EntradaApp" class="user" method="post" asp-route-returnurl="@Model.ReturnUrl">
        <div class="container">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Name" type="text" class="form-control form-control-user"  placeholder="Nombres">
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="LastName" type="text" class="form-control form-control-user" placeholder="Apellidos">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Correo electronico">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Password" type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Contraseña">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Confirmar contraseña">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Crear Cuenta!
                                </button>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-controller="EntradaApp" asp-action="ForgotPassword">¿Olvidaste tu contrase&ntilde;a?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" asp-controller="EntradaApp" asp-action="Login">¿Tienes una cuenta? !Inicia Sesi&oacute;n!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
</body>