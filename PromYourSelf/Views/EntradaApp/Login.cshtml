@model PromYourSelf.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutEntradaApp";
}

<!-- Outer Row -->
<form asp-action="Login" asp-controller="EntradaApp" class="user" method="post" asp-route-returnurl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">¡Bienvenido de Regreso!</h1>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Usuario" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Ingrese su Email...">
                                    <span asp-validation-for="Usuario" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Contraseña">
                                    <span asp-validation-for="Password" class="text-danger"></span><span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input asp-for="RememberMe" type="checkbox" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">Recuerdame</label>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Iniciar Sesi&oacute;n
                                </button>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-controller="EntradaApp" asp-action="ForgotPassword">¿Olvidaste tu contrase&ntilde;a?</a>
                                </div>                               
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Register", "EntradaApp")">¡Crear una cuenta!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form><!-- /form -->