@model ReflectionIT.Mvc.Paging.PagingList<PromYourSelf.Models.TipoClasificacion>

@{
    ValuesCardHeader cardHeader = new ValuesCardHeader();
    string Titulo = "Listado de Tipo de Clasificaciones";
    string Edit = "Edit";
    string Delete = "Delete";
    string Details = "Details";
    cardHeader.Text = Titulo;
    ViewData["Title"] = Titulo;
}

<div class="card shadow">
    <partial name="_CardHeaderPartialView" model="cardHeader" />
    <div class="card-body">
        <div class="row">
            <form method="get" asp-action="Index">

                <div class="row">
                    <div class="form-group">
                        <div class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="input-group">
                                <input name="filter" type="text" class="form-control bg-light border-0 small" value="@Model.RouteValue["Filter"]" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search fa-sm">&nbsp; Buscar</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="form-group">
                                <input name="Desde" type="datetime" class="form-control bg-light border-0 small" value="@Model.RouteValue["Desde"]" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                            </div>
                        </div>
                    </div><div class="form-group">
                        <div class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="form-group">
                                <input name="Hasta" type="datetime" class="form-control bg-light border-0 small" value="@Model.RouteValue["Hasta"]" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mr-auto ml-md-3 my-2 my-md-0 mw-100">
                    <div class="form-group">
                        <a asp-action="Create" class="btn btn-secondary">Crear Nuevo</a>
                    </div>
                </div>
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>Acci&oacute;n</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <partial name="_ActionsPartialView" model="new Actions() { Key =item.TipoClasificacionID,EditAction=Edit,DetailsAction=Details,DeleteAction=Delete  }" />
                    </tr>
                }
            </tbody>
        </table>
        <partial name="_PaginationPartialView" model="this.Model" />
    </div>
</div>



