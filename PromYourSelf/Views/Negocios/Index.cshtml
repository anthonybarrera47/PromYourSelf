@model ReflectionIT.Mvc.Paging.PagingList<Models.Negocios>

@{
    string Titulo = "Listado  de Negocios";
    ViewData["Title"] = Titulo;
    int PageSize = 1;
    var start = this.Model.StartPageIndex;
    var stop = this.Model.StopPageIndex;
}

<h1>Negocios</h1>

<div>
    <form method="get" asp-action="Index">
        <div class="form-row justify-content-between">
            <div class="form-inline">
                <input name="filter" class="form-control" placeholder="Filtro"
                       value="@Model.RouteValue["Filter"]" />
                <button type="submit" class="btn  btn-primary">
                    <i class="fas fa-search" aria-hidden="true">Buscar</i>
                </button>
            </div>
            <div class="form-group">
                <select asp-for="@PageSize" class="form-control">
                    <option value="5" selected>5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </div>
        </div>

    </form>
</div>
<br />
<div class="card shadow">
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>
                            @Html.SortableHeaderFor(model => model.NombreComercial)
                        </th>
                        <th>
                            @Html.SortableHeaderFor(model => model.Direccion)
                        </th>
                        <th>
                            @Html.SortableHeaderFor(model => model.Telefono1)
                        </th>
                        <th>
                            @Html.SortableHeaderFor(model => model.Telefono2)
                        </th>
                        <th>
                            @Html.SortableHeaderFor(model => model.Latitud)
                        </th>
                        <th>
                            @Html.SortableHeaderFor(model => model.Longitud)
                        </th>
                        <th>Acci&oacute;n</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreComercial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Direccion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono2)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Latitud)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Longitud)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.NegocioID"><i class="fas fa-edit">&nbsp; Editar</i></a> |
                                <a asp-action="Details" asp-route-id="@item.NegocioID"><i class="fas fa-info-circle">&nbsp;Detalles</i></a> |
                                <a asp-action="Delete" asp-route-id="@item.NegocioID"><i class="fas fa-trash-alt">&nbsp;Eliminar</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_PaginationPartialView" model="this.Model" />
        </div>
</div>
</div>