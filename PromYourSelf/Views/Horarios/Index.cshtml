@model ReflectionIT.Mvc.Paging.PagingList<Models.Horarios>

@{
    string Titulo = "Listado  de Horarios";
    string Edit = "Edit";
    string Delete = "Delete";
    string Details = "Details";
    ViewData["Title"] = "Index";
    int PageSize = 1;
}

<div>
    <form method="get" asp-action="Index">
        <div class="form-row justify-content-between">
            <div class="form-inline">
                <input name="filter" class="form-control" placeholder="Filtro"
                       value="@Model.RouteValue["Filter"]" />
                <button type="submit" class="btn  btn-primary">
                    <i class="fas fa-search" aria-hidden="true">Buscar</i>
                </button>
            </div>
            <div class="form-group">
                <select asp-for="@PageSize" class="form-control">
                    <option value="5" selected>5</option>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                </select>
            </div>
        </div>

    </form>
</div>
<br />
<div class="card shadow">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Lunes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Martes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Miercoles)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Jueves)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Viernes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sabado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Domingo)
                    </th>
                    <th>Acci&oacute;n</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lunes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Martes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Miercoles)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Jueves)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Viernes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sabado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Domingo)
                        </td>
                        <partial name="_ActionsPartialView" model="new Actions() { Key =item.HorarioID,EditAction=Edit,DetailsAction=Details,DeleteAction=Delete  }" />
                    </tr>
                }
            </tbody>
        </table>
        <partial name="_PaginationPartialView" model="this.Model" />
    </div>
</div>