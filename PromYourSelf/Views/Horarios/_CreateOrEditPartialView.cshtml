@model HorariosViewModel
@{
    ButtonsCardFooter Button = new ButtonsCardFooter();
    ValuesCardHeader cardHeader = new ValuesCardHeader();
    string Action = (Model.Id == 0) ? "Create" : "Edit";
    string Texto = (Model.Id == 0) ? "Guardar" : "Editar";
    Button.ActionButtonSaveOrEdit = Action;
    Button.TextButtonSaveOrEdit = Texto;
    cardHeader.Text = (Model.Id == 0) ? "Crear Tipos Clasificaciones" : "Modificar Tipos Clasificaciones";
    ViewData["Title"] = cardHeader.Text;
}

<form class="form" asp-action="@Action" id="registrationForm">
    <div class="card shadow mb-4">
        <partial name="_CardHeaderPartialView" model="cardHeader" />
        <div class="card-body">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (Model.Id != 0)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="row col-12">
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">Lunes</label>
                            <input type="time" asp-for="LunesDesde" class="form-control" />
                            <span asp-validation-for="LunesDesde" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <input type="time" asp-for="LunesHasta" data-val="true" data-val-error="Debe elegir una ambos horarios" class="form-control" />
                            <span asp-validation-for="LunesDesde" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row col-12">
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">Martes</label>
                            <input type="time" asp-for="MartesDesde" class="form-control" />
                            <span asp-validation-for="MartesDesde" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <input type="time" asp-for="MartesHasta" data-val="true" data-val-error="Debe elegir una ambos horarios" class="form-control" />
                            <span asp-validation-for="MartesDesde" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row col-12">
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">Miercoles</label>
                            <input type="time" asp-for="MiercolesDesde" class="form-control" />
                            <span asp-validation-for="MiercolesDesde" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <input type="time" asp-for="MiercolesHasta" data-val="true" data-val-error="Debe elegir una ambos horarios" class="form-control" />
                            <span asp-validation-for="MiercolesDesde" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row col-12">
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">Jueves</label>
                            <input type="time" asp-for="JuevesDesde" class="form-control" />
                            <span asp-validation-for="JuevesDesde" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <input type="time" asp-for="JuevesHasta" data-val="true" data-val-error="Debe elegir una ambos horarios" class="form-control" />
                            <span asp-validation-for="JuevesDesde" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row col-12">
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">Viernes</label>
                            <input type="time" asp-for="ViernesDesde" class="form-control" />
                            <span asp-validation-for="ViernesDesde" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <input type="time" asp-for="ViernesHasta" data-val="true" data-val-error="Debe elegir una ambos horarios" class="form-control" />
                            <span asp-validation-for="ViernesDesde" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row col-12">
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">Sabado</label>
                            <input type="time" asp-for="SabadoDesde" class="form-control" />
                            <span asp-validation-for="SabadoDesde" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <input type="time" asp-for="SabadoHasta" data-val="true" data-val-error="Debe elegir una ambos horarios" class="form-control" />
                            <span asp-validation-for="SabadoDesde" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row col-12">

                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">Domingo</label>
                            <input type="time" asp-for="DomingoDesde" class="form-control" />
                            <span asp-validation-for="DomingoDesde" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label class="control-label">&nbsp;</label>
                            <input type="time" asp-for="DomingoHasta" class="form-control" />
                            <span asp-validation-for="DomingoDesde" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_ButtonsCardFooterPartialView" model="Button" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


